<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
	xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:listview="clr-namespace:Syncfusion.ListView.XForms;assembly=Syncfusion.SfListView.XForms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:prism="http://prismlibrary.com"
    xmlns:b="clr-namespace:Prism.Behaviors;assembly=Prism.Forms"
    xmlns:converters="clr-namespace:CourtCheckInPrism.Converters"
    prism:ViewModelLocator.AutowireViewModel="True"
	xmlns:local="clr-namespace:CourtCheckInPrism.Views;assembly=CourtCheckInPrism"    
    xmlns:data="clr-namespace:Syncfusion.DataSource;assembly=Syncfusion.DataSource.Portable"
    x:Class="CourtCheckInPrism.Views.VisitSchedule"
    Title="Visit Schedule"
    BackgroundColor="LightPink">
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:ItemTappedEventArgsConverter x:Key="itemTappedEventArgsConverter" />
            <converters:DateConverter x:Key="DateConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="ADD"
                     Order="Primary"
                     Priority="0"
                     Command="{Binding Path=NavigateCommand}"
                     CommandParameter="AddVisit"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <ScrollView>
            
            <StackLayout>
                <SearchBar x:Name="filterText" HeightRequest="40"
                           Placeholder="Search by Location"
                           TextChanged="filterTextChanged"/>
                <listview:SfListView x:Name="listView"
                                     ItemSpacing="5,0,0,0"
                                     ItemSize="120"
                                     AutoFitMode="Height"
                                     SelectionMode="Single"
                                     BackgroundColor="LightPink"
                                     SelectionGesture="Tap"
                                     ItemTapped="listView_ItemTapped"                                     
                                     IsStickyHeader="True"  
                                     SelectionBackgroundColor="#E4E4E4">
                    <listview:SfListView.DataSource>
                        <data:DataSource>
                            <data:DataSource.SortDescriptors>
                                <data:SortDescriptor PropertyName="DateOfCourtAppearence" Direction="Ascending"/>
                            </data:DataSource.SortDescriptors>
                        </data:DataSource>
                    </listview:SfListView.DataSource>
                    
                    <listview:SfListView.ItemTemplate>
                        <DataTemplate>
                            <Frame x:Name="frame" CornerRadius="10" HasShadow="True" Padding="2" Margin="2" BackgroundColor="AliceBlue">
                            <Grid Padding="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="20" />
                                    <RowDefinition Height="20" />
                                    <RowDefinition Height="20" />
                                    <RowDefinition Height="20" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Row="0" Grid.Column="0" Text="Court Time: " TextColor="Teal" FontSize="15"/>
                                <Label Grid.Row="0" Grid.Column="1" Text="{Binding CourtAppearenceTime}" FontAttributes="Bold" TextColor="Teal" FontSize="15" />
                                <Label Grid.Row="1" Grid.Column="0" Text="Occ/PON #:" TextColor="Teal" FontSize="15"/>
                                <Label Grid.Row="1" Grid.Column="1" Text="{Binding OccurenceNo}" TextColor="Teal" FontSize="15"/>
                                <Label Grid.Row="2" Grid.Column="0" Text="Court Address:" TextColor="Teal" FontSize="15"/>
                                <Label Grid.Row="2" Grid.Column="1" Text="{Binding CourtHouseAddress}" TextColor="Teal" FontSize="15"/>
                                <Label Grid.Row="3" Grid.Column="0" Text="Date Of Offence:" TextColor="Teal" FontSize="15"/>
                                <Label Grid.Row="3" Grid.Column="1" Text="{Binding DateOfOffence}" TextColor="Teal" FontSize="15"/>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </listview:SfListView.ItemTemplate>
                </listview:SfListView>                             
            </StackLayout>       
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
 
